{
  "name": "neuro-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "prettier --write . && next lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "neo4j-driver": "^5.0.0-alpha01",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/react": "17.0.41",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "typescript": "4.6.2"
  },
  "prettier": {
    "printWidth": 180,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,css,scss,json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
